{
  "rewrites": [
    {
      "source": "/ads.txt",
      "has": [
        {
          "type": "host",
          "value": "chineseidioms.com"
        }
      ],
      "destination": "https://www.chineseidioms.com/ads.txt"
    }
  ],
  "redirects": [
    {
      "source": "/((?!ads\\.txt$).*)",
      "has": [
        {
          "type": "host",
          "value": "chineseidioms.com"
        }
      ],
      "destination": "https://www.chineseidioms.com/$1",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "all"
        }
      ]
    }
  ]
}
